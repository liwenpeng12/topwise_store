<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/as_list_loading"
    android:layout_width="match_parent"
    android:layout_height="@dimen/as_list_foot_view_height"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
     >

    <com.topwise.topos.appstore.view.BallScaleProgress
        android:id="@+id/as_footprogress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/as_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/as_list_foot_text_left_margin"
        android:layout_gravity="center_vertical"
        android:text="@string/loading"
        android:textColor="@color/as_list_foot_text_color"
        android:textSize="@dimen/as_list_foot_text_size"
        android:gravity="center"
        />

</LinearLayout>