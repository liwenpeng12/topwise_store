<?xml version="1.0" encoding="utf-8"?>
<com.topwise.topos.appstore.view.ListAppItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zkas_id_list_item_app_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/zkas_list_item_sl_height"
    >
    
    <ImageView 
        android:id="@+id/zkas_id_list_item_app_icon"
        android:layout_width="@dimen/zkas_list_item_sl_icon_width"
        android:layout_height="@dimen/zkas_list_item_sl_icon_hight"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/zkas_list_item_horizontal_padding"
        android:src="@drawable/zkas_app_icon_mask_small"
        android:background="@drawable/zkas_app_default_icon_small"
        android:scaleType="fitXY"
        />

    
    
    <com.topwise.topos.appstore.view.ProgressButton
        android:id="@+id/zkas_id_list_item_progress_btn"
        android:layout_width="@dimen/zkas_list_item_app_btn_width"
        android:layout_height="@dimen/zkas_list_item_app_btn_height"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/zkas_list_item_sl_btn_text_margin"
        android:layout_marginTop="@dimen/zkas_list_item_sl_btn_top_margin"
        android:layout_marginRight="@dimen/zkas_list_item_horizontal_padding"
        android:textSize="@dimen/zkas_list_item_app_btn_text_size"
        android:textColor="@color/zkas_list_item_app_btn_text_color"
        />
    
    <TextView 
        android:id="@+id/zkas_id_list_item_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/zkas_id_list_item_app_icon"
        android:layout_toLeftOf="@id/zkas_id_list_item_progress_btn"
        android:layout_marginLeft="@dimen/zkas_list_item_sl_icon_text_margin"
        android:layout_marginTop="@dimen/zkas_list_item_sl_btn_top_margin"
        android:textSize="@dimen/zkas_list_item_app_name_text_size"
        android:textColor="@color/zkas_list_item_app_name_text_color"
        android:gravity="left"
        android:singleLine="true"
        />
    
    <TextView 
        android:id="@+id/zkas_id_list_item_app_used_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zkas_id_list_item_app_name"
        android:layout_alignLeft="@id/zkas_id_list_item_app_name"
        android:layout_toRightOf="@id/zkas_id_list_item_app_icon"
        android:layout_toLeftOf="@id/zkas_id_list_item_progress_btn"
        android:layout_marginTop="@dimen/zkas_list_item_sl_text_vert_margin"
        android:textSize="@dimen/zkas_list_item_app_used_info_text_size"
        android:textColor="@color/zkas_list_item_app_name_text_color"
        android:gravity="left"
        android:singleLine="true"
        />
    
    <LinearLayout 
        android:id="@+id/zkas_id_list_item_app_tag_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/zkas_id_list_item_app_used_info"
        android:layout_alignLeft="@id/zkas_id_list_item_app_name"
        android:layout_toRightOf="@id/zkas_id_list_item_app_icon"
        android:layout_marginTop="@dimen/zkas_list_item_sl_text_vert_margin"
        android:layout_marginRight="@dimen/zkas_list_item_horizontal_padding"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:fadingEdge="horizontal"
        >
    </LinearLayout>
    
    <ImageView 
        android:id="@+id/zkas_id_app_item_btm_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/zkas_list_divider"
        />

</com.topwise.topos.appstore.view.ListAppItemView>
