<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/as_actionbar_layout" />

    <include layout="@layout/line2" />

    <TextView
        android:id="@+id/no_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_app"
        android:textColor="@color/as_title_bar_title_text_color"
        android:textSize="@dimen/zkas_list_item_app_name_text_size"
        android:visibility="gone" />

    <android.support.v4.view.ViewPager
        android:id="@+id/appdetail_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
